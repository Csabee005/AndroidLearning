<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="numberButton">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorSlightGray</item>
    </style>
    <style name="functionButton">
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorDarkGray</item>
    </style>
    <style name="equalsButton">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorBlue</item>
    </style>

</resources>
